# Local dev: use relative /api and let Vite proxy to Django.
# This also works when browsing through Cloudflare (dev-thor.360edu.org)
# because the browser will call https://dev-thor.360edu.org/api.
VITE_API_BASE_URL=/api
VITE_PROXY_TARGET=http://127.0.0.1:8000

# Optional (Cloudflare dev tunnel): enable these only when browsing via
# https://dev-thor.360edu.org to make Vite HMR connect over WSS.
# npm run dev:tunnel sets these automatically.
# VITE_HMR_HOST=dev-thor.360edu.org
# VITE_HMR_PROTOCOL=wss
# VITE_HMR_CLIENT_PORT=443

# WebSocket Feature Flags (enable to use WebSocket instead of polling)
VITE_WS_FEATURE_ACCOUNT_BALANCE=true
VITE_WS_FEATURE_POSITIONS=false
VITE_WS_FEATURE_INTRADAY=false
VITE_WS_FEATURE_GLOBAL_MARKET=true
